<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Efarming_Sustainability.App.Views.Shared.ActionCard"
       x:Name="Root"
       Padding="15"
       CornerRadius="25"
       WidthRequest="120"
       HeightRequest="160"
       BackgroundColor="#E8E8E8"
       HasShadow="True">

    <VerticalStackLayout HorizontalOptions="Center">

        <!-- Ãcono clickeable -->
        <Image x:Name="CardImage"
               WidthRequest="70"
               HeightRequest="70">
            <Image.GestureRecognizers>
                <TapGestureRecognizer 
                    Command="{Binding Source={x:Reference Root}, Path=Command}"
                    CommandParameter="{Binding Source={x:Reference Root}, Path=CommandParameter}" />
            </Image.GestureRecognizers>
        </Image>

        <Label x:Name="CardText"
               FontAttributes="Bold"
               FontSize="14"
               HorizontalOptions="Center"
               Margin="0,10,0,0"/>

    </VerticalStackLayout>

</Frame>